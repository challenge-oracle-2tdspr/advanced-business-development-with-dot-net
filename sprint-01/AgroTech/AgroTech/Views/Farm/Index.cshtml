@model IEnumerable<AgroTech.Application.DTOs.FarmDTO>

    @{
    ViewData["Title"] = "Fazendas";
    }

    <h2>Fazendas</h2>

    <p>
        <a class="btn btn-primary" asp-action="Create">Nova Fazenda</a>
    </p>

    <table class="table table-striped table-bordered">
        <thead>
        <tr>
            <th>Nome</th>
            <th>Localização</th>
            <th>Ações</th>
        </tr>
        </thead>
        <tbody>
        @foreach(var farm in Model)
        {
        <tr>
            <td>@farm.Name</td>
            <td>@farm.Location</td>
            <td>
                <a asp-action="Edit" asp-route-id="@farm.Id" class="btn btn-sm btn-warning">Editar</a>
                <a asp-action="Delete" asp-route-id="@farm.Id" class="btn btn-sm btn-danger">Excluir</a>
            </td>
        </tr>
        }
        </tbody>
    </table>
