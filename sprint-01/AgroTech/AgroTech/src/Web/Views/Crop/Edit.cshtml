@model AgroTech.Application.DTOs.CropDTO

@{
    ViewData["Title"] = "Editar Safra";
}

<h2>@ViewData["Title"]</h2>

<form asp-action="Edit" method="post" novalidate>
    <input type="hidden" asp-for="Id" />
    <div class="mb-3">
        <label asp-for="Name" class="form-label"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="PlantingDate" class="form-label"></label>
        <input asp-for="PlantingDate" type="date" class="form-control" />
        <span asp-validation-for="PlantingDate" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="HarvestDate" class="form-label"></label>
        <input asp-for="HarvestDate" type="date" class="form-control" />
        <span asp-validation-for="HarvestDate" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="FarmId" class="form-label"></label>
        <input asp-for="FarmId" class="form-control" />
        <span asp-validation-for="FarmId" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Atualizar</button>
    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}