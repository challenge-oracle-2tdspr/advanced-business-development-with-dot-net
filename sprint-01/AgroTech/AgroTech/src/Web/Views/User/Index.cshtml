@model IEnumerable<AgroTech.Application.DTOs.UserDTO>

@{
    ViewData["Title"] = "Usuários";
}

<h2>Usuários</h2>

<p>
    <a class="btn btn-primary" asp-action="Create">Novo Usuário</a>
</p>

<table class="table table-striped table-bordered">
    <thead>
    <tr>
        <th>Nome</th>
        <th>Email</th>
        <th>Perfil</th>
        <th>Ações</th>
    </tr>
    </thead>
    <tbody>
    @foreach(var user in Model)
    {
        <tr>
            <td>@user.Name</td>
            <td>@user.Email</td>
            <td>@user.Role</td>
            <td>
                <a asp-action="Edit" asp-route-id="@user.Id" class="btn btn-sm btn-warning">Editar</a>
                <a asp-action="Delete" asp-route-id="@user.Id" class="btn btn-sm btn-danger">Excluir</a>
            </td>
        </tr>
    }
    </tbody>
</table>